<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ntinos.herome.PickPowersFragment">


    <TextView
        android:text="PICK A POWER"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#FAC740"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Lightning"
        android:id="@+id/thorBtn"
        android:background="@drawable/hero_button"
        android:drawableLeft="@drawable/thors_hammer"
        android:drawablePadding="0dp"
        android:textColor="#FAC740"
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="@+id/turtleBtn"
        app:layout_constraintLeft_toLeftOf="@+id/turtleBtn"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/turtleBtn"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="Flight"
        android:id="@+id/supermanBtn"
        app:layout_constraintRight_toRightOf="@+id/thorBtn"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/thorBtn"
        android:background="@drawable/hero_button"
        android:drawableLeft="@drawable/super_man_crest"
        android:drawablePadding="0dp"
        android:textColor="#FAC740"
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/thorBtn"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="Super Strength"
        android:id="@+id/strengthBtn"
        android:background="@drawable/hero_button"
        android:drawableLeft="@drawable/super_strength"
        android:drawablePadding="0dp"
        android:textColor="#FAC740"
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/supermanBtn"
        app:layout_constraintLeft_toLeftOf="@+id/supermanBtn"
        app:layout_constraintRight_toRightOf="@+id/supermanBtn" />

    <Button
        android:text="Web Slinging"
        android:id="@+id/webBtn"
        android:background="@drawable/hero_button"
        android:drawableLeft="@drawable/spider_web"
        android:drawablePadding="0dp"
        android:textColor="#FAC740"
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/strengthBtn"
        app:layout_constraintLeft_toLeftOf="@+id/strengthBtn"
        app:layout_constraintRight_toRightOf="@+id/strengthBtn" />

    <Button
        android:id="@+id/lazerBtn"
        android:background="@drawable/hero_button"
        android:drawableLeft="@drawable/laser_vision"
        android:drawablePadding="0dp"
        android:textColor="#FAC740"
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/webBtn"
        app:layout_constraintLeft_toLeftOf="@+id/webBtn"
        app:layout_constraintRight_toRightOf="@+id/webBtn"
        android:text="Lazer Vision" />

    <Button
        android:text="Show Backstory"
        android:background="@drawable/hero_solid_button"
        android:textColor="#000000"
        android:layout_width="300dp"
        android:padding="10dp"
        android:id="@+id/backstoryBtn"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:backgroundTint="#FAC740"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lazerBtn"
        app:layout_constraintLeft_toLeftOf="@+id/lazerBtn"
        app:layout_constraintRight_toRightOf="@+id/lazerBtn" />

    <Button
        android:text="TURTLE POWER"
        android:id="@+id/turtleBtn"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        android:background="@drawable/hero_button"
        android:drawableLeft="@drawable/turtle_power"
        android:drawablePadding="0dp"
        android:textColor="#FAC740"
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</android.support.constraint.ConstraintLayout>
