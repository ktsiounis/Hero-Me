<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ntinos.herome.Fragments.BackstoryFragment"
    android:background="@drawable/app_bg">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Primary Power"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/primaryBtn"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="Super Strength"
        android:id="@+id/primaryBtn"
        android:background="@drawable/hero_button"
        android:drawableLeft="@drawable/super_strength"
        android:drawablePadding="0dp"
        android:textColor="#FAC740"
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        android:layout_marginBottom="16dp"
        android:scrollHorizontally="false"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:fadeScrollbars="true"
        android:isScrollContainer="true" />

    <Button
        android:text="Flight"
        android:id="@+id/secondaryBtn"
        android:background="@drawable/hero_button"
        android:drawableLeft="@drawable/super_man_crest"
        android:drawablePadding="0dp"
        android:textColor="#FAC740"
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/startOverBtn"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:text="Start Over"
        android:background="@drawable/hero_solid_button"
        android:textColor="#000000"
        android:layout_width="300dp"
        android:padding="10dp"
        android:id="@+id/startOverBtn"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:backgroundTint="#FAC740"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" />

    <TextView
        android:text="SUPERMAN"
        android:layout_width="0dp"
        android:id="@+id/title"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:textColor="#f8c640"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/big_superman_logo"
        android:id="@+id/logo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Secondary Power"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintBottom_toTopOf="@+id/secondaryBtn"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="@string/superman_story"
        android:layout_width="327dp"
        android:layout_height="137dp"
        android:id="@+id/story"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Backstory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/story"
        android:layout_marginBottom="8dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toRightOf="@+id/logo" />
</android.support.constraint.ConstraintLayout>
